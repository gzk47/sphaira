{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "core",
            "displayName": "core",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "Release",
            "displayName": "Release",
            "inherits":["core"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "LTO": true
            }
        },
        {
            "name": "Lite",
            "displayName": "Lite",
            "inherits":["core"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "LTO": true,

                "ENABLE_NVJPG": false,
                "ENABLE_NSZ": false,

                "ENABLE_LIBUSBHSFS": false,
                "ENABLE_LIBUSBDVD": false,
                "ENABLE_FTPSRV": false,
                "ENABLE_LIBHAZE": false,

                "ENABLE_AUDIO_MP3": false,
                "ENABLE_AUDIO_OGG": false,
                "ENABLE_AUDIO_WAV": false,
                "ENABLE_AUDIO_FLAC": false,

                "ENABLE_DEVOPTAB_HTTP": false,
                "ENABLE_DEVOPTAB_NFS": false,
                "ENABLE_DEVOPTAB_SMB2": false,
                "ENABLE_DEVOPTAB_FTP": false,
                "ENABLE_DEVOPTAB_SFTP": false,
                "ENABLE_DEVOPTAB_WEBDAV": false
            }
        },
        {
            "name": "Dev",
            "displayName": "Dev",
            "inherits":["core"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "LTO": false,
                "DEV_BUILD": true
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Release",
            "configurePreset": "Release",
            "jobs": 16
        },
        {
            "name": "Lite",
            "configurePreset": "Lite",
            "jobs": 16
        },
        {
            "name": "Dev",
            "configurePreset": "Dev",
            "jobs": 16
        }
    ]
}
